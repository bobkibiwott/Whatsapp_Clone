<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyContacts">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="2dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:id="@+id/newG"
                    android:layout_width="45dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/light_green"
                    android:src="@drawable/white_people"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/white_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/newG"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:id="@+id/newGroup"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:text="New group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:padding="2dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:id="@+id/addProf"
                    android:layout_width="45dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/light_green"
                    android:src="@drawable/white_people"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/white_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/addProf"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:id="@+id/newContacts"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:text="New Contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/myContactsRecyclerView"
            android:layout_height="match_parent"/>
            <RelativeLayout
                android:padding="2dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:id="@+id/inviteFriends"
                    android:layout_width="45dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"

                    android:layout_height="45dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/dark_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/inviteFriends"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:text="Invite friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="2dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:id="@+id/contactHelp"
                    android:layout_width="45dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:src="@drawable/white_people"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/dark_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/contactHelp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:text="Contact help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>