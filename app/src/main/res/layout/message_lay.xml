<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactCard"
    app:cardElevation="0dp"
    android:clickable="true"
    android:visibility="visible"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/contactProfile"
            android:layout_width="55dp"
            android:layout_margin="5dp"
            android:src="@drawable/profile"
            android:layout_height="55dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:layout_toRightOf="@+id/contactProfile"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_above="@+id/bottom"
                android:layout_toLeftOf="@+id/right"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:id="@+id/contactUsername"
                    android:textColor="@color/black"
                    android:text="Bella 1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/sentStatusImage"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/not_sent_yet_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:textSize="16dp"
                        android:maxLines="1"
                        android:id="@+id/contactMessage"
                        android:text="Hae There! I am using WhatsApp"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_above="@+id/bottom"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:id="@+id/right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="12dp"
                    android:id="@+id/lastTime"
                    android:layout_margin="2dp"
                    android:text="13:59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:visibility="invisible"
                    android:id="@+id/messageCountCard"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/light_green"
                    android:layout_width="22dp"
                    app:cardCornerRadius="20dp"
                    android:layout_height="22dp">
                    <TextView
                        android:id="@+id/messageCount"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="2"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:id="@+id/bottom"
                android:layout_marginTop="15dp"
                android:background="#DFDFDF"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>