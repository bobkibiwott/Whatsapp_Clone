<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StartScreen">
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:text="Welcome to WhatsApp"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="300dp"
        android:layout_below="@+id/top"
        android:layout_centerInParent="true"
        android:src="@drawable/background"
        android:layout_above="@+id/bottom"
        android:layout_height="300dp"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Read th privacy policy that does this and that i do not understand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:id="@+id/agree_and_continue"
            android:ems="15"
            android:layout_gravity="center"
            android:text="Agree and Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/purple_500"
            android:layout_margin="10dp"
            android:textSize="14dp"
            android:text="Powered by Firebase"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>